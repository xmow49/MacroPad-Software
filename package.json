{
    "name": "MacroPad",
    "productName": "MacroPad",
    "version": "1.0.0",
    "description": "Macropad Configurator",
    "main": "main.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "build-installer": "electron-builder"
    },
    "repository": "https://github.com/xmow49/MacroPad-Software",
    "author": "Dorian Benech",
    "license": "CC0-1.0",
    "build": {
        "appId": "Macropad",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "src/imgs/icon.ico"
        },
        "nsis": {
            "installerIcon": "src/imgs/icon.ico",
            "uninstallerIcon": "src/imgs/icon.ico",
            "uninstallDisplayName": "MacroPad",
            "license": "license.txt",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.63",
        "@electron-forge/maker-deb": "^6.0.0-beta.63",
        "@electron-forge/maker-rpm": "^6.0.0-beta.63",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
        "@electron-forge/maker-zip": "^6.0.0-beta.63",
        "@mdi/font": "^6.5.95",
        "electron": "^13.5.2",
        "electron-rebuild": "^3.2.7",
        "electron-builder": "^22.14.13"

    },
    "dependencies": {
        "@electron/remote": "^2.0.1",
        "@simonwep/pickr": "^1.8.2",
        "auto-launch": "^5.0.5",
        "deepmerge": "^4.2.2",

        "electron-squirrel-startup": "^1.0.0",
        "electron-store": "^8.0.1",
        "ngx-icon-picker": "^1.7.0",
        "serialport": "^9.2.4",
        "usb-detection": "^4.13.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [{
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Macropad"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}